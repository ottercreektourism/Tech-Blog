<form method="post" id="postForm">
  <div class="blog">
    <textarea type="text" class="title" placeholder="Post title..." id="title"></textarea>
    <textarea type="text" class="article" placeholder="Start writing here..." id="article"></textarea>
  </div>

  <div class="blog-options">
    <button class="btn dark publish-btn" type="submit">publish</button>
    <input type="file" accept="image/*" id="image-upload" hidden>
    <label for="image-upload" class="btn grey upload-btn">Upload Image</label>
  </div>
</form>


{{#each blogposts as |blogpost| }}
<div class="row mbblogpost">
  <div class="col-md-5">
    <h2>
      <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
    <p>Created by {{blogpost.user.name}} on {{format_date blogpost.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogpost.post_body}}
    </p>
  </div>
</div>
{{> comment comments=blogpost.comments}}
{{/each}}


